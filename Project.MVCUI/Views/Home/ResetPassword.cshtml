@model ForgetPasswordViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en-US" dir="ltr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <!-- ===============================================-->
    <!--    Document Title-->
    <!-- ===============================================-->
    <title>Onion Project</title>


    <!-- ===============================================-->
    <!--    Favicons-->
    <!-- ===============================================-->
    <link rel="apple-touch-icon" sizes="180x180" href="~/OuterTools/assets/img/favicons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/OuterTools/assets/img/favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/OuterTools/assets/img/favicons/favicon-16x16.png">
    <link rel="shortcut icon" type="image/x-icon" href="~/OuterTools/assets/img/favicons/favicon.ico">
    <link rel="manifest" href="~/OuterTools/assets/img/favicons/manifest.json">
    <meta name="msapplication-TileImage" content="~/OuterTools/assets/img/favicons/mstile-150x150.png">
    <meta name="theme-color" content="#ffffff">
    <script src="~/OuterTools/assets/js/config.js"></script>
    <script src="~/OuterTools/vendors/overlayscrollbars/OverlayScrollbars.min.js"></script>


    <!-- ===============================================-->
    <!--    Stylesheets-->
    <!-- ===============================================-->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,500,600,700%7cPoppins:300,400,500,600,700,800,900&amp;display=swap" rel="stylesheet">
    <link href="~/OuterTools/vendors/overlayscrollbars/OverlayScrollbars.min.css" rel="stylesheet">
    <link href="~/OuterTools/assets/css/theme-rtl.min.css" rel="stylesheet" id="style-rtl">
    <link href="~/OuterTools/assets/css/theme.min.css" rel="stylesheet" id="style-default">
    <link href="~/OuterTools/assets/css/user-rtl.min.css" rel="stylesheet" id="user-style-rtl">
    <link href="~/OuterTools/assets/css/user.min.css" rel="stylesheet" id="user-style-default">
    <script>
        var isRTL = JSON.parse(localStorage.getItem('isRTL'));
        if (isRTL) {
            var linkDefault = document.getElementById('style-default');
            var userLinkDefault = document.getElementById('user-style-default');
            linkDefault.setAttribute('disabled', true);
            userLinkDefault.setAttribute('disabled', true);
            document.querySelector('html').setAttribute('dir', 'rtl');
        } else {
            var linkRTL = document.getElementById('style-rtl');
            var userLinkRTL = document.getElementById('user-style-rtl');
            linkRTL.setAttribute('disabled', true);
            userLinkRTL.setAttribute('disabled', true);
        }
    </script>
</head>


<body>

    <!-- ===============================================-->
    <!--    Main Content-->
    <!-- ===============================================-->
    <main class="main" id="top">
        <div class="container-fluid">
            <div class="row min-vh-100 flex-center g-0">
                <div class="col-lg-8 col-xxl-5 py-3 position-relative">

                    @if (TempData["success"] != null)
                    {
                        <partial name="_AlertSuccessPartial" model="@TempData["success"]"></partial>
                    }

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <img class="bg-auth-circle-shape" src="~/OuterTools/assets/img/icons/spot-illustrations/bg-shape.png" alt="" width="250"><img class="bg-auth-circle-shape-2" src="~/OuterTools/assets/img/icons/spot-illustrations/shape-1.png" alt="" width="150">
                    <div class="card overflow-hidden z-index-1">
                        <div class="card-body p-0">
                            <div class="row g-0 h-100">
                                <div class="col-md-5 text-center bg-card-gradient">
                                    <div class="position-relative p-4 pt-md-5 pb-md-7 light">
                                        <div class="bg-holder bg-auth-card-shape" style="background-image:url(/OuterTools/assets/img/icons/spot-illustrations/half-circle.png);">
                                        </div>
                                        <!--/.bg-holder-->

                                        <div class="z-index-1 position-relative">
                                            <a class="link-light mb-4 font-sans-serif fs-4 d-inline-block fw-bolder" asp-controller="Home" asp-action="Index">Onion Project</a>
                                            <p class="opacity-75 text-white">Masaüstü bilgisayar, dizüstü bilgisayar, cep telefonu, televizyon, tablet, fotoğraf makinesi ve binlerce teknoloji ürünü burada.</p>
                                        </div>
                                    </div>
                                    <div class="mt-3 mb-4 mt-md-4 mb-md-5 light">
                                        <p class="mb-0 mt-4 mt-md-5 fs--1 fw-semi-bold text-white opacity-75"><a class="text-decoration-underline text-white" asp-controller="Home" asp-action="Terms">KKVK Aydınlatma Metni</a> ve <a class="text-decoration-underline text-white" asp-controller="Home" asp-action="Terms">Üyelik Sözleşmesi </a>'ni okuyabilirsin</p>
                                    </div>
                                </div>
                                <div class="col-md-7 d-flex flex-center">
                                    <div class="p-4 p-md-5 flex-grow-1">
                                        <div class="text-center text-md-start">
                                            <h4 class="mb-0"> Şifreyi sıfırla</h4>
                                        </div>
                                        <div class="row justify-content-center">
                                            <div class="col-sm-8 col-md">
                                                <form method="post" class="mb-3">
                                                    <div class="mb-3">
                                                        <label class="form-label" for="NewPassword">Yeni şifre</label>
                                                        <input class="form-control" id="NewPassword" asp-for="NewPassword" />
                                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label" for="NewPasswordConfirm">Yeni şifre tekrar</label>
                                                        <input class="form-control" id="NewPasswordConfirm" asp-for="NewPasswordConfirm" />
                                                        <span asp-validation-for="NewPasswordConfirm" class="text-danger"></span>
                                                    </div>
                                                    <div class="mb-3"></div>
                                                    <button class="btn btn-primary d-block w-100 mt-3" type="submit">Şifre Sıfırla</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <!-- ===============================================-->
    <!--    End of Main Content-->
    <!-- ===============================================-->
    <!-- ===============================================-->
    <!--    JavaScripts-->
    <!-- ===============================================-->
    <script src="~/OuterTools/vendors/popper/popper.min.js"></script>
    <script src="~/OuterTools/vendors/bootstrap/bootstrap.min.js"></script>
    <script src="~/OuterTools/vendors/anchorjs/anchor.min.js"></script>
    <script src="~/OuterTools/vendors/is/is.min.js"></script>
    <script src="~/OuterTools/vendors/fontawesome/all.min.js"></script>
    <script src="~/OuterTools/vendors/lodash/lodash.min.js"></script>
    <script src="https://polyfill.io/v3/polyfill.min.js?features=window.scroll"></script>
    <script src="~/OuterTools/vendors/list.js/list.min.js"></script>
    <script src="~/OuterTools/assets/js/theme.js"></script>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>

</html>